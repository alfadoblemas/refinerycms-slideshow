<%= form_for [refinery, :slideshow_admin, object],  html: {multipart: true} do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => object,
              :include_object_name => true %>

  <%= render "/refinery/slideshow/admin/slideshows/inner_form", f: f, object: object %>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => true,
             :delete_title => t('delete', :scope => "refinery.slideshow.admin.slideshows"),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => object.uid) %>
<% end -%>
